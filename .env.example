# Database
MONGODB_URI=mongodb://localhost:27017/glitzfusion

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name
CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com
NEXT_PUBLIC_R2_PUBLIC_BASE_URL=https://pub-xxxxxxxxx.r2.dev

# Authentication
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=http://localhost:3000
ADMIN_EMAIL=admin@glitzfusion.com
ADMIN_PASSWORD=admin123

# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-key

# SMTP Email Configuration
SMTP_HOST=smtp.zoho.in
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=admin@glitzfusion.in
SMTP_PASS=your-smtp-password
SMTP_FROM=admin@glitzfusion.in

# Careers Email Configuration
CAREERS_EMAIL=careers@glitzfusion.in
COMPANY_NOTIFICATION_EMAIL=hr@glitzfusion.in

# Razorpay Payment Gateway Configuration
# For Development (Test Mode)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_test_secret

# For Production (Live Mode) - Replace with live keys
# RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
# RAZORPAY_KEY_SECRET=your_razorpay_live_secret

# Environment Mode
NODE_ENV=development
# NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# ALLOWED_ORIGINS=https://your-fusionx-domain.com,https://your-production-domain.com
